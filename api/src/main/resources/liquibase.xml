        </insert>
        <insert tableName="bkkh_charge_account">
            <column name="account_name" value="Needy Fund"></column>
            <column name="uuid" value="ae2d20c3-ccf9-11e5-9255-34e6d77c15d6"></column>
        </insert>
    </changeSet>
</databaseChangeLog>