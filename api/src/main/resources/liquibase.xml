<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <!--
        See http://www.liquibase.org/manual/home#available_database_refactorings
        for a list of supported elements and attributes
    -->
    <changeSet id="bkkh_costs_create_table" author="intellisoft">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="bkkh_costs"/>
            </not>
        </preConditions>

        <comment >
            Create table bkkh_costs, for storing cost details
        </comment>

        <createTable tableName="bkkh_costs">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="patient_id" type="int"/>

            <column name="date_created" type="datetime" />

            <column name="stay" type="double" />

            <column name="procedure_amount" type="double" />

            <column name="anaesthesia" type="double" />

            <column name="doctor" type="double" />

            <column name="meds" type="double" />

            <column name="lab" type="double" />

            <column name="xray" type="double" />

            <column name="supplies" type="double" />

            <column name="file" type="double" />

            <column name="follow_up" type="double" />

            <column name="nhif" type="double" />

            <column name="total" type="double" />

            <column name="paid" type="double" />

            <column name="balance" type="double" />

            <column name="account_charged" type="int" />

        </createTable>

        <addForeignKeyConstraint baseTableName="bkkh_costs" baseColumnNames="patient_id"
                                 constraintName="Patient associated with cost"
                                 referencedTableName="patient" referencedColumnNames="patient_id" />
    </changeSet>
    
</databaseChangeLog>