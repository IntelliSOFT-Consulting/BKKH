<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.bkkh">

    <class name="org.openmrs.module.bkkh.Costs" table="bkkh_costs">
        <id name="id" type="long" column="id" unsaved-value="0">
            <generator class="native" />
        </id>
        <many-to-one name="patient" class="org.openmrs.Patient" column="patient_id" not-null="true" />
        <property name="date" column="date_created" type="java.util.Date" not-null="false" />
        <property name="stay" column="stay" type="double" not-null="false" />
        <property name="procedure" column="procedure_amount" type="double" not-null="false" />
        <property name="anaesthesia" column="anaesthesia" type="double" not-null="false" />
        <property name="doctor" column="doctor" type="double" not-null="false" />
        <property name="medications" column="meds" type="double" not-null="false" />
        <property name="lab" column="lab" type="double" not-null="false" />
        <property name="xray" column="xray" type="double" not-null="false" />
        <property name="supplies" column="supplies" type="double" not-null="false" />
        <property name="file" column="file" type="double" not-null="false" />
        <property name="followUp" column="follow_up" type="double" not-null="false" />
        <property name="nhif" column="nhif" type="double" not-null="false" />
        <property name="total" column="total" type="double" not-null="false" />
        <property name="paid" column="paid" type="double" not-null="false" />
        <property name="balance" column="balance" type="double" not-null="false" />
        <property name="accountCharged" column="account_charged" type="int" not-null="false" />
    </class>

</hibernate-mapping>